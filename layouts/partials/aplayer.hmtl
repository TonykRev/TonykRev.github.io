<!-- Fonts để không bị lỗi ký tự Nhật/Hàn + chữ đẹp, gọn -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Noto+Sans+JP:wght@400;600&display=swap" rel="stylesheet">
<!-- APlayer -->
<link rel="stylesheet" href="https://unpkg.com/aplayer/dist/APlayer.min.css">
<script src="https://unpkg.com/aplayer/dist/APlayer.min.js"></script>

<!-- Hamburger Menu Button -->
<div class="ap-hamburger" onclick="toggleAPlayer()">
  <div class="hamburger-line"></div>
  <div class="hamburger-line"></div>
  <div class="hamburger-line"></div>
</div>

<!-- Container -->
<div id="aplayer" class="ap-mini"></div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const ap = new APlayer({
    container: document.getElementById('aplayer'),
    fixed: false,          // dùng CSS để đặt vị trí
    autoplay: false,
    audio: [
      {{- range $i, $song := site.Data.playlist -}}
      {
        name: '{{ $song.name }}',
        artist: '{{ $song.artist }}',
        url: '{{ $song.url }}',
        cover: '{{ $song.cover }}'
      }{{ if ne (add $i 1) (len site.Data.playlist) }},{{ end }}
      {{- end }}
    ]
  });
});

// Toggle function cho hamburger menu
let isAPlayerOpen = false;
function toggleAPlayer() {
  const hamburger = document.querySelector('.ap-hamburger');
  const player = document.getElementById('aplayer');
  
  isAPlayerOpen = !isAPlayerOpen;
  
  if (isAPlayerOpen) {
    hamburger.classList.add('active');
    player.classList.add('show');
  } else {
    hamburger.classList.remove('active');
    player.classList.remove('show');
  }
}
</script>

<style>
:root{
  --ap-bg:      #0f0f12;
  --ap-bg-2:    #151518;
  --ap-text:    #f3e3a6;  /* chữ chính: amber nhạt */
  --ap-muted:   #a8996b;  /* chữ phụ */
  --ap-accent:  #f1c40f;  /* vàng gold highlight */
  --ap-border:  #2b2b2f;
  --ap-shadow:  rgba(0,0,0,.55);
}

/* HAMBURGER MENU BUTTON */
.ap-hamburger {
  position: fixed;
  top: 70px;           /* Đặt trên player */
  left: 28px;          /* Cùng vị trí với player */
  width: 36px;
  height: 36px;
  background: var(--ap-bg);
  border-radius: 8px;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 4px;
  box-shadow: 0 4px 12px var(--ap-shadow);
  z-index: 1001;       /* Cao hơn player */
  transition: all 0.3s ease;
}

.ap-hamburger:hover {
  background: var(--ap-bg-2);
  transform: translateY(-2px);
}

.hamburger-line {
  width: 18px;
  height: 2px;
  background: var(--ap-text);
  border-radius: 1px;
  transition: all 0.3s ease;
}

/* Animation khi menu active */
.ap-hamburger.active .hamburger-line:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.ap-hamburger.active .hamburger-line:nth-child(2) {
  opacity: 0;
}

.ap-hamburger.active .hamburger-line:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

/* Vị trí + kích thước MINI */
.ap-mini{
  position: fixed;
  top: 110px;          /* chỉnh để canh với header/cover */
  left: 28px;          /* canh mép sidebar trái */
  width: 200px;        /* SIÊU GỌN – tăng/giảm tùy bạn */
  border-radius: 10px;
  overflow: hidden;
  background: var(--ap-bg);
  box-shadow: 0 8px 24px var(--ap-shadow);
  z-index: 1000;
  font-family: Inter, "Noto Sans JP", "Noto Sans", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  
  /* ẨN PLAYER MẶC ĐỊNH */
  transform: translateX(-100%);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* HIỂN THỊ PLAYER KHI CÓ CLASS SHOW */
.ap-mini.show {
  transform: translateX(0);
  opacity: 1;
}

/* Header/info siêu gọn */
.aplayer .aplayer-info{
  background: linear-gradient(135deg, #191919, #101012);
  padding: 6px 7px;
  height: 44px;
  color: var(--ap-text);
}

/* Tiêu đề/artist nhỏ gọn */
.aplayer .aplayer-music{
  margin-left: 44px;              /* để chừa chỗ cho cover */
  line-height: 14px;
}
.aplayer .aplayer-title{
  font-size: 11px;
  font-weight: 600;
  color: var(--ap-text);
}
.aplayer .aplayer-author{
  font-size: 10px;
  color: var(--ap-muted);
}

/* Cover nhỏ */
.aplayer .aplayer-pic{
  width: 38px !important;
  height: 38px !important;
  border-radius: 6px;
  box-shadow: 0 2px 8px var(--ap-shadow);
}

/* Time + icon siêu nhỏ */
.aplayer .aplayer-time{
  font-size: 9px;
  color: var(--ap-muted);
}
.aplayer .aplayer-icon{ 
  width:14px; 
  height:14px; 
}
.aplayer .aplayer-icon path{ 
  fill: var(--ap-muted); 
}
.aplayer .aplayer-icon:hover path{ 
  fill: var(--ap-accent); 
}

/* Thanh progress mảnh */
.aplayer .aplayer-bar-wrap .aplayer-bar{
  height: 2px !important;
  background: #3c3c41 !important;
}
.aplayer .aplayer-bar-wrap .aplayer-played{
  background: var(--ap-accent) !important;
}

/* Danh sách bài: rất gọn */
.aplayer .aplayer-list{
  background: var(--ap-bg-2);
  color: var(--ap-text);
  font-size: 10px;
  border-top: 1px solid var(--ap-border);
  max-height: 120px;
  overflow-y: auto;
}

.aplayer .aplayer-list li{
  padding: 2px 6px;
  line-height: 18px;
  height: 18px;
  border-bottom: 1px solid rgba(255,255,255,0.04);
}

.aplayer .aplayer-list-index{ 
  width: 12px; 
}
.aplayer .aplayer-list-author{ 
  color: var(--ap-muted); 
}

.aplayer .aplayer-list li:hover{
  background: #24242a;
  color: var(--ap-text);
}

.aplayer .aplayer-list li.aplayer-list-light{
  background: rgba(241,196,15,0.12);
  color: var(--ap-text);
  border-left: 2px solid var(--ap-accent);
}

/* Scrollbar cho playlist */
.aplayer .aplayer-list::-webkit-scrollbar {
  width: 4px;
}

.aplayer .aplayer-list::-webkit-scrollbar-track {
  background: var(--ap-bg);
}

.aplayer .aplayer-list::-webkit-scrollbar-thumb {
  background: var(--ap-muted);
  border-radius: 2px;
}

/* Bỏ lyric để gọn */
.aplayer .aplayer-lrc{ 
  display:none!important; 
}

/* Responsive cho mobile */
@media (max-width: 768px) {
  .ap-mini {
    left: 10px;
    width: 180px;
  }
  
  .ap-hamburger {
    left: 10px;
  }
}
</style>